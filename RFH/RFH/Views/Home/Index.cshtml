@model RFH.Models.ContentData
		   
@{
	ViewBag.Title = "Index";
}

<style type="text/css">
	#MainWindow
	{
		padding: 15 15 15 15;
		background: url("/Content/images/placeholder.png");
	}
</style>

<div id="MainWindow">
	<div id="MainWindowTop">
		<div id="WelcomeContent">
			@Html.Raw( @Model.Content )
		</div>

		@*
		<div id="ImageContent">
			<img src="@Url.Content("~/Content/images/placeholder.png")" width="100%"
					alt="IMAGE WILL GO HERE." />
		</div>
		*@
	</div>

	<div style="clear:both"></div>

	<div id="MainWindowBottom">
		<h2>Find a Organization</h2>
		<p>
			To narrow the list of organizations on the right, select one or more filters below.
			To view an organization's information and articles, click the organization's name on the right.
		</p>
		@Html.Partial("SearchWizard/MockData")
	</div>
</div>
