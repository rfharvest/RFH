@model RFH.Models.Article

@{
    ViewBag.Title = Model.ShortDescription;
}

<div class="breadCrumb">
    @Html.ActionLink(Model.HostSite.Name, "Details", "Site", new {Id=Model.HostSiteId}, null)
    &gt;   
    @Html.ActionLink(Model.Category.Name, "Index", "Category", new {Id=Model.Category.Name}, null)
</div>

<div style="float:right">
    @Model.HostSite.Name
    <div>
        <ul>
        @foreach (var metaData in Model.HostSite.MetaData) {
            <li>@metaData.Type:</li>
            <ul>
            @foreach (var metaDataValue in metaData.Values) {
                <li>@metaDataValue.Value</li>
            }
            </ul>
        }
        </ul>
    </div>
</div>

<div>
    @Html.Raw( Model.Content )
</div>
<div>
    @Html.ActionLink(String.Format("Back to {0}", Model.HostSite.Name), "Details", "Site", new {Id=Model.HostSiteId}, null)
</div>
