@model RFH.Views.Article.IndexViewModel

@{
    ViewBag.Title = Model.Article.ShortDescription;
}

<div class="breadCrumb">
    @Html.ActionLink(Model.Article.HostSite.Name, "Details", "Site", new {Id=Model.Article.HostSite.Name}, null)
    &gt;   
    @Html.ActionLink(Model.Article.Category.Name, "Index", "Category", new {Id=Model.Article.Category.Name}, null)
</div>

<div style="float:right">
    @Model.Article.HostSite.Name
    <div>
        <ul>
        @foreach (var metaData in Model.Article.HostSite.MetaData) {
            <li>@metaData.Type:</li>
            <ul>
            @foreach (var metaDataValue in metaData.Values) {
                <li>@metaDataValue.Value</li>
            }
            </ul>
        }
        </ul>
    </div>
</div>

<div>
    @Html.Raw( Model.Article.Content )
</div>
<div class="goUp">
    @Html.ActionLink(String.Format("Back to {0}", Model.Article.HostSite.Name), "Details", "Site", new {Id=Model.Article.HostSite.Name}, null)
</div>
<div>
    @if (Model.RelatedArticles.Count > 0) {
        <h1>Related Articles</h1>
        <ul>
            @foreach (var relatedArticle in Model.RelatedArticles) {
                <li>
                    @Html.ActionLink(String.Format("{0} article by {1}", Model.Article.Category.Name, relatedArticle.HostSiteName), "Index", "Article", new {id = relatedArticle.ArticleId}, null)
                </li>
            }   
        </ul>
    }

</div>