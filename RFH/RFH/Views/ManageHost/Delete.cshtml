@using RFH.Models
@model HostSite

<h2>@Html.Raw(@PageData["SectionTitle"]) Delete</h2>

<div class="formContainer">

    <h3>Are you sure you want to delete this Host Site?</h3>

    <table class="twoColumnTable">
        <tr>
            <td>@Html.LabelFor(m => m.Name)</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Area)</td>
            <td>@Model.Area</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.HostSiteUrl)</td>
            <td>@Model.HostSiteUrl</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.IsActive)</td>
            <td>@Model.IsActive</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Description)</td>
            <td class="htmlField">@Html.Raw(@Model.Description)</td>
        </tr>
    </table>

    @using (Html.BeginForm()) {

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Delete" class="standardButton" />
        </p>
    }

</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>