@model RFH.Models.Article

<h2>@Html.Raw(@PageData["SectionTitle"]) Delete</h2>

<div class="formContainer">

    <h3>Are you sure you want to delete this article?</h3>
    
    <div class="display-label">@Html.LabelFor(model => model.HostSite.Name)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.HostSite.Name)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Category.Name)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Category.Name)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.IsPublished)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsPublished)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.ShortDescription)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ShortDescription)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Content)</div>
    <div class="display-field htmlField">
        @Html.Raw(Model.Content)
    </div>

    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" class="standardButton" />
        </p>
    }

</div>

<p>
    @Html.ActionLink("Back to Details", "Detail", new { Model.Id })
</p>