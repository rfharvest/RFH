<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/admincss.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
</head>

<body>

    <div>

        <div id="header">

            <h1>Rotary First Harvest &ndash; Admin</h1>
        
            <ul id="primaryNav">
                <li>@Html.ActionLink("Host Sites", "Index", "ManageHost")</li>
                <li>@Html.ActionLink("Categories", "Index", "ManageCategory")</li>
                <li>@Html.ActionLink("CMS Pages", "Index", "ManageContent")</li>
                <li>@Html.ActionLink("Tags", "Index", "ManageHostSiteTag")</li>
                <li>@Html.ActionLink("Images", "Index", "ManageImage")</li>
                <li>@Html.ActionLink("Backup", "Index", "ManageBackupRecipient")</li>
            </ul>
        
            <div id="logout">@Html.ActionLink("[Log Out]", "LogOut", "Account", null, null)</div>

        </div>
        

        <div id="content">
            @RenderBody()
        </div>

    </div>

    <script type="text/javascript" src="@Url.Content("~/scripts/adminCustom.js")"></script>

</body>
</html>